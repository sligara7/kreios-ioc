{
  "workflow_metadata": {
    "version": "0.1.0",
    "name": "FU-03 Delta Highlighting & Approval",
    "based_on": "feature_update_workflow.json P3",
    "description": "Summarize all changes (deltas) and obtain approval if required."
  },
  "entry_conditions": {
    "from": "FU-02",
    "artifacts": ["updated specs under specs/machine"]
  },
  "steps": [
    { "id": "P3.1", "description": "Generate delta report (new/modified/removed services, interfaces, models, deployment, compliance)", "tool": "manual", "outputs": ["specs/human/feature/delta_report.md", "specs/machine/feature/delta_summary.json"] },
    { "id": "P3.2", "description": "Highlight downstream impacts (integration, test, deployment, compliance)", "tool": "manual" },
    { "id": "P3.3", "description": "Log delta summary in process log", "tool": "manual", "output": "context/process_log.md" },
    { "id": "P3.4", "description": "Obtain stakeholder approval if required", "tool": "manual" }
  ],
  "artifact_routing": {
    "human": "specs/human/feature/",
    "machine": "specs/machine/feature/",
    "context": "context/"
  },
  "iteration_paths": {
    "on_rejection": "../feature_update/FU-02-ArchReengineering.json"
  },
  "handoff": {
    "produces": ["specs/human/feature/delta_report.md", "specs/machine/feature/delta_summary.json"],
    "next_workflow": "../feature_update/FU-04-DevBootstrap.json"
  }
}
