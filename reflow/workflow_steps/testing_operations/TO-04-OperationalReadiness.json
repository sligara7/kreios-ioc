{
  "workflow_metadata": {
    "version": "0.1.0",
    "name": "Dev-07 Operational Readiness & Runbooks",
    "based_on": "service_development_workflow.json D11",
    "description": "Confirm operational preparedness and incident handling pathways."
  },
  "entry_conditions": {
    "from": "Dev-06",
    "artifacts": ["specs/human/service_docs/<service>/runbooks/"]
  },
  "steps": [
    { "id": "D11.1", "description": "Validate runbooks cover critical operational scenarios", "tool": "manual" },
    { "id": "D11.2", "description": "Conduct failure injection exercises", "tool": "manual" },
    { "id": "D11.3", "description": "Measure MTTR simulation vs target", "tool": "manual" },
    { "id": "D11.4", "description": "Confirm alert thresholds & escalation paths", "tool": "manual" }
  ],
  "artifact_routing": {
    "runbooks": "specs/human/service_docs/<service>/runbooks/",
    "reports": "specs/human/reports/runbook_validation/"
  },
  "iteration_paths": {
    "on_gaps": "../development/Dev-04-IntegrationAndSecurity.json"
  },
  "validation": {
    "exit_criteria": ["Runbooks actionable", "Failure drills successful", "Alert pathways validated"]
  },
  "handoff": {
    "produces": ["specs/human/reports/runbook_validation/*"],
    "next_workflow": "../development/Dev-08-OperationalValidationAndRelease.json"
  }
