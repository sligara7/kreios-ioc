{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/sligara7/reflow/schemas/index.json",
  "title": "Reflow Index File",
  "description": "Schema for index.json files that map component IDs to architecture file paths",
  "type": "object",
  "required": ["system_name", "description", "components"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this JSON schema file"
    },
    "system_name": {
      "type": "string",
      "description": "Name of the system",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Description of the system"
    },
    "last_updated": {
      "type": "string",
      "format": "date",
      "description": "Date of last update (YYYY-MM-DD)"
    },
    "version": {
      "type": "string",
      "description": "Version of this index file"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the system",
      "properties": {
        "framework": {
          "type": "string",
          "enum": ["UAF", "uaf", "systems_biology", "social_network", "ecological", "complex_adaptive", "custom"],
          "description": "Architectural framework used"
        },
        "total_components": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of components in the system"
        }
      }
    },
    "components": {
      "type": "object",
      "description": "Mapping of component_id (lowercase_with_underscores) to relative file path",
      "patternProperties": {
        "^[a-z_][a-z0-9_]*$": {
          "type": "string",
          "description": "Relative path from system root to component architecture file",
          "pattern": ".*\\.json$"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    }
  },
  "additionalProperties": true,
  "examples": [
    {
      "system_name": "My System",
      "description": "Description of my system",
      "last_updated": "2025-10-25",
      "version": "1.0.0",
      "metadata": {
        "framework": "UAF",
        "total_components": 3
      },
      "components": {
        "user_service": "machine/service_arch/user_service/service_architecture.json",
        "auth_service": "machine/service_arch/auth_service/service_architecture.json",
        "data_service": "machine/service_arch/data_service/service_architecture.json"
      }
    }
  ],
  "errorMessage": {
    "required": {
      "system_name": "Missing required field 'system_name'",
      "description": "Missing required field 'description'",
      "components": "Missing required field 'components' - must provide mapping of component_id to file paths"
    },
    "properties": {
      "components": "components must be an object mapping component_id (lowercase_with_underscores) to relative file paths ending in .json"
    }
  }
}
